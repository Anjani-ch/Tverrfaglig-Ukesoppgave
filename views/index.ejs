<%- include('./partials/head.ejs') %>

    <main class="container">
        <h1>Demo login site</h1>

        <p>This demo demonstrates a login system with Passport JS and MongoDB. It will also show how to protect routes with Passport JS.</p>

        <ul class="collection with-header">
            <li class="collection-header"><h4>Technologies</h4></li>
            <li class="collection-item">Node JS (Express)</li>
            <li class="collection-item">MongoDB</li>
            <li class="collection-item">Materialize CSS</li>
        </ul>

        <ul class="collection with-header">
            <li class="collection-header"><h4>Dependencies</h4></li>
            <li class="collection-item">bcryptjs</li>
            <li class="collection-item">connect-flash</li>
            <li class="collection-item">dotenv</li>
            <li class="collection-item">ejs</li>
            <li class="collection-item">email-validator</li>
            <li class="collection-item">express</li>
            <li class="collection-item">express-session</li>
            <li class="collection-item">mongoose</li>
            <li class="collection-item">passport</li>
            <li class="collection-item">passport-local</li>
        </ul>

        <% if(!user) { %>
            <a href="/signup" class="waves-effect waves-light btn-large">Get Started</a>
        <% } else { %>
            <a href="/secret" class="waves-effect waves-light btn-large">Go to secret</a>
        <% } %>
    </main>

<%- include('./partials/footer.ejs') %>